	number = {10},
	journal = {PLoS ONE},
	author = {Dalziel, Antonia E. and Delean, Steven and Heinrich, Sarah and Cassey, Phillip},
	year = {2016},
	file = {Attachment:/home/gerardommc/Zotero/storage/YCNLH7WQ/Dalziel et al. - 2016 - Persistence of low pathogenic influenza A virus in water A systematic review and quantitative meta-analysis.pdf:application/pdf},
}

