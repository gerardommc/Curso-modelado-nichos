	keywords = {Flood plain, Population dynamics, Rainfall, Rodent, Snake},
	pages = {30--37},
	file = {Attachment:/home/gerardommc/Zotero/storage/LKMHAMFD/Madsen et al. - 2006 - Rain, rats and pythons Climate-driven population dynamics of predators and prey in tropical Australia.pdf:application/pdf},
