	keywords = {behavior, foraging, machine learning, animal behavior, movement ecology, tri-axial acceleration, algorithm, biomechanics, flight characteristic, free-ranging wild animal, gyps fulvus, integration of ecology, long-range foray, movement ecology and the, vulture},
	pages = {986--996},
