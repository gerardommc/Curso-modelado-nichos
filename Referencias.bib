	keywords = {Animals, Biodiversity, Geography, Humans, Socioeconomic Factors, Zoonoses, Incidence, Regression Analysis, Zoonoses: epidemiology, Zoonoses: microbiology, Leptospirosis, Leptospirosis: epidemiology},
