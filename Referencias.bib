Publisher: Elsevier Masson SAS},
	keywords = {Spatial autocorrelation, Latitudinal gradient, Distribution modeling, Metabolic theory, Richness gradients},
	pages = {163--173},
	file = {Attachment:/home/gerardommc/Zotero/storage/N6YYLGJZ/Terribile, Diniz-Filho - 2009 - Spatial patterns of species richness in New World coral snakes and the metabolic theory of ecology.pdf:application/pdf},
}

@article{pyron_extinction_2011,
	title = {Extinction, {Ecological} {Opportunity}, and the {Origins} of {Global} {Snake} {Diversity}},
