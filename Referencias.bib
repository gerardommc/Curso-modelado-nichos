	author = {Battin, James},
	year = {2004},
	note = {ISBN: 1523-1739},
	keywords = {habitat selection, population dynamics, calidad del hábitat, dinámica de poblaciones, ecological trap, fuente-vertedero, habitat quality, selección de hábitat, source-sink system, trampa ecológica},
	pages = {1482--1491},
