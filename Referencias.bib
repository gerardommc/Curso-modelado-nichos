	file = {Attachment:/home/gerardommc/Zotero/storage/7R5XDQ9B/Fabiszewski, Umbanhowar, Mitchell - 2010 - Modeling landscape-scale pathogen spillover between domesticated and wild hosts Asian soybean.pdf:application/pdf},
