	journal = {Ecology},
	author = {Papastamatiou, Yannis P and Meyer, Carl G and Carvalho, Felipe and Dale, Jonathon J and Hutchinson, Melanie R and Holland, Kim N},
	month = nov,
	year = {2013},
	pmid = {24400511},
	keywords = {acoustic telemetry, brownian bridge, galeocerdo cuvier, gamm, hawaiian islands, individual-based movement models, partial migration, sex biased-dispersal, tiger shark, usa},
	pages = {2595--606},
}

